{
  "name": "@dpid/needs-based-ai",
  "version": "0.1.0",
  "description": "Needs-based AI simulation for TypeScript",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "@dpid/command-state-machine": "^1.0.0"
  },
  "devDependencies": {
    "@dpid/command-state-machine": "^1.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "keywords": [
    "ai",
    "simulation",
    "needs-based",
    "game-development",
    "agents"
  ],
  "license": "MIT",
  "author": "dpid"
}
